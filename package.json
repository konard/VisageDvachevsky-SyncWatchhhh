{
  "name": "syncwatch",
  "version": "0.1.0",
  "private": true,
  "description": "Web service for synchronized video watching with up to 5 participants",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test --workspaces --if-present -- --run",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "docker:dev": "docker compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml up --build",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "db:generate": "npm run db:generate --workspace=backend",
    "db:studio": "npm run db:studio --workspace=backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VisageDvachevsky/SyncWatchhhh.git"
  },
  "keywords": [
    "video",
    "sync",
    "watch-party",
    "webrtc",
    "streaming"
  ],
  "author": "VisageDvachevsky",
  "license": "MIT"
}
