# Database
DATABASE_URL="postgresql://syncwatch:syncwatch_dev@localhost:5432/syncwatch"

# Redis
REDIS_URL="redis://localhost:6379"

# MinIO (S3-compatible storage)
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="syncwatch"
MINIO_SECRET_KEY="syncwatch_dev"
MINIO_USE_SSL=false

# JWT
JWT_SECRET="change_this_to_a_secure_random_string"
JWT_REFRESH_SECRET="change_this_to_another_secure_random_string"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Server
PORT=4000
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Video settings
MAX_UPLOAD_SIZE_MB=8192
MAX_VIDEO_DURATION_HOURS=3
VIDEO_EXPIRY_HOURS=72
